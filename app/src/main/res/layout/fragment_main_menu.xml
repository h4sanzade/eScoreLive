<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    tools:context=".ui.main.MainMenuFragment">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/app_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="eScoreLive"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:fontFamily="@font/mulish_bold" />

        <ImageView
            android:id="@+id/search_id"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/vector_search"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <ImageView
            android:id="@+id/notification_id"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/vector_notification"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

    </LinearLayout>

    <!-- Weekly Calendar Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/calendar_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/card_background"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/prev_week_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/vector_left"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/week_range_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="14 Apr - 20 Apr"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:fontFamily="@font/mulish_bold" />

                <ImageView
                    android:id="@+id/next_week_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/vector_right"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:id="@+id/day_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/day_1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fri"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/day_1_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/day_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/day_2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sat"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/day_2_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="15"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/day_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/selected_day">

                    <TextView
                        android:id="@+id/day_3_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:textSize="12sp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/day_3_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/day_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/day_4_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mon"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/day_4_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/day_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/day_5_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tue"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/day_5_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/day_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/day_6_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wed"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/day_6_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/day_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/day_7_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thu"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/day_7_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Content Filter Tabs -->
    <HorizontalScrollView
        android:id="@+id/content_filter_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/calendar_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/filter_upcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/mulish_bold"
                android:padding="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/filter_unselected_bg"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/filter_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/mulish_bold"
                android:padding="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/bottom_line_selected"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/filter_favorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorites"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/mulish_bold"
                android:padding="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/filter_unselected_bg" />

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Matches RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/matches_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/content_filter_scroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_live_match" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/empty_state_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/matches_recycler"
        app:layout_constraintBottom_toBottomOf="@id/matches_recycler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_no_matches"
            android:layout_marginBottom="16dp"
            android:alpha="0.5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No matches found"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/mulish_bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Try selecting a different filter"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/mulish_regular" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>