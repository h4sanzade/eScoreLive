<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    tools:context=".presentation.main.HomeFragment">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="@font/mulish_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/notification_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vector_notification"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/search_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vector_search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/notification_id"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp" />

    <!-- Main Content Container -->
    <FrameLayout
        android:id="@+id/main_content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/app_title"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Home Content (existing content) -->
        <ScrollView
            android:id="@+id/home_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Weekly Calendar Container -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/calendar_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/background_color">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/prev_week_btn"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/vector_left"
                                android:background="?android:attr/selectableItemBackgroundBorderless"
                                android:padding="4dp" />

                            <TextView
                                android:id="@+id/week_range_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                tools:text="14 Apr - 20 Apr"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:textAlignment="center"
                                android:fontFamily="@font/mulish_bold" />

                            <ImageView
                                android:id="@+id/next_week_btn"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/vector_right"
                                android:background="?android:attr/selectableItemBackgroundBorderless"
                                android:padding="4dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp">

                            <LinearLayout
                                android:id="@+id/day_1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp"
                                android:background="?android:attr/selectableItemBackground">

                                <TextView
                                    android:id="@+id/day_1_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="Fri"
                                    android:textSize="12sp"
                                    android:textColor="@android:color/darker_gray" />

                                <TextView
                                    android:id="@+id/day_1_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="14"
                                    android:textSize="16sp"
                                    android:textColor="@color/white"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/day_2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp"
                                android:background="?android:attr/selectableItemBackground">

                                <TextView
                                    android:id="@+id/day_2_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="Sat"
                                    android:textSize="12sp"
                                    android:textColor="@android:color/darker_gray" />

                                <TextView
                                    android:id="@+id/day_2_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    tools:text="15"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/day_3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp"
                                android:background="@drawable/selected_day">

                                <TextView
                                    android:id="@+id/day_3_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/today"
                                    android:textSize="12sp"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/day_3_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="16"
                                    android:textSize="16sp"
                                    android:textColor="@color/white"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/day_4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp"
                                android:background="?android:attr/selectableItemBackground">

                                <TextView
                                    android:id="@+id/day_4_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="Mon"
                                    android:textSize="12sp"
                                    android:textColor="@android:color/darker_gray" />

                                <TextView
                                    android:id="@+id/day_4_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="17"
                                    android:textSize="16sp"
                                    android:textColor="@color/white"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/day_5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp"
                                android:background="?android:attr/selectableItemBackground">

                                <TextView
                                    android:id="@+id/day_5_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="Tue"
                                    android:textSize="12sp"
                                    android:textColor="@android:color/darker_gray" />

                                <TextView
                                    android:id="@+id/day_5_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="18"
                                    android:textSize="16sp"
                                    android:textColor="@color/white"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/day_6"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp"
                                android:background="?android:attr/selectableItemBackground">

                                <TextView
                                    android:id="@+id/day_6_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="Wed"
                                    android:textSize="12sp"
                                    android:textColor="@android:color/darker_gray" />

                                <TextView
                                    android:id="@+id/day_6_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="19"
                                    android:textSize="16sp"
                                    android:textColor="@color/white"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/day_7"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp"
                                android:background="?android:attr/selectableItemBackground">

                                <TextView
                                    android:id="@+id/day_7_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="Thu"
                                    android:textSize="12sp"
                                    android:textColor="@android:color/darker_gray" />

                                <TextView
                                    android:id="@+id/day_7_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="20"
                                    android:textSize="16sp"
                                    android:textColor="@color/white"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Match Filter Tabs -->
                <HorizontalScrollView
                    android:id="@+id/tabs_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="24dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingEnd="16dp">

                        <TextView
                            android:id="@+id/upcoming_tab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/upcoming"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/mulish_bold"
                            android:padding="12dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:background="@drawable/bottom_line_selected"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/score_tab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/score"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/mulish_bold"
                            android:background="@drawable/filter_unselected_bg"
                            android:padding="12dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/favorites_tab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/favorites"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/mulish_bold"
                            android:background="@drawable/filter_unselected_bg"
                            android:padding="12dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp" />

                    </LinearLayout>

                </HorizontalScrollView>

                <!-- Live Scores Section -->
                <LinearLayout
                    android:id="@+id/live_header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/live_header_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/upcoming_matches"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/mulish_bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/see_more_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/see_more"
                        android:textSize="14sp"
                        android:textColor="#F63D68"
                        android:fontFamily="@font/mulish_bold"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="8dp" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/live_matches_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    tools:listitem="@layout/item_live_match" />

                <!-- Bottom Padding -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

            </LinearLayout>

        </ScrollView>

        <!-- Competition Content (placeholder) -->
        <LinearLayout
            android:id="@+id/competition_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_competition"
                android:tint="@color/accent_color"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Competition"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:fontFamily="@font/mulish_bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Competition content coming soon..."
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/mulish_regular" />

        </LinearLayout>

        <!-- News Content (placeholder) -->
        <LinearLayout
            android:id="@+id/news_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_news"
                android:tint="@color/accent_color"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="News"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:fontFamily="@font/mulish_bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest football news coming soon..."
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/mulish_regular" />

        </LinearLayout>

        <!-- Account Content (placeholder) -->
        <LinearLayout
            android:id="@+id/account_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_account"
                android:tint="@color/accent_color"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:fontFamily="@font/mulish_bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account settings and profile..."
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/mulish_regular" />

        </LinearLayout>

    </FrameLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_background"
        app:itemIconTint="@color/bottom_nav_color_selector"
        app:itemTextColor="@color/bottom_nav_color_selector"
        app:itemActiveIndicatorStyle="@style/BottomNavActiveIndicator"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>