<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/card_background">

        <!-- Drag Handle -->
        <View
            android:id="@+id/drag_handle"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/drag_handle_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- League Logo -->
        <ImageView
            android:id="@+id/league_logo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/drag_handle"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/ic_placeholder" />

        <!-- Title -->
        <TextView
            android:id="@+id/standings_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Premier League Standings"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/mulish_bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/league_logo"
            app:layout_constraintTop_toBottomOf="@id/drag_handle"
            app:layout_constraintEnd_toStartOf="@id/close_button" />

        <!-- Season -->
        <TextView
            android:id="@+id/standings_season"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Season 2024/25"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/mulish_regular"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/league_logo"
            app:layout_constraintTop_toBottomOf="@id/standings_title"
            app:layout_constraintEnd_toStartOf="@id/close_button"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Close Button -->
        <ImageView
            android:id="@+id/close_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:tint="@android:color/darker_gray"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/drag_handle"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Table Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:background="@color/background_color">

        <!-- Position Header -->
        <TextView
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:text="#"
            android:textSize="11sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/mulish_bold"
            android:gravity="center" />

        <!-- Team Header -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Team"
            android:textSize="11sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/mulish_bold"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <!-- P -->
        <TextView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:text="P"
            android:textSize="11sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/mulish_bold"
            android:gravity="center" />

        <!-- W -->
        <TextView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:text="W"
            android:textSize="11sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/mulish_bold"
            android:gravity="center" />

        <!-- D -->
        <TextView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:text="D"
            android:textSize="11sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/mulish_bold"
            android:gravity="center" />

        <!-- L -->
        <TextView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:text="L"
            android:textSize="11sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/mulish_bold"
            android:gravity="center" />

        <!-- GD -->
        <TextView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="GD"
            android:textSize="11sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/mulish_bold"
            android:gravity="center" />

        <!-- PTS -->
        <TextView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="PTS"
            android:textSize="11sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/mulish_bold"
            android:gravity="center" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:alpha="0.3"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Content Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp">

        <!-- Standings RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/standings_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            android:nestedScrollingEnabled="true"
            tools:listitem="@layout/item_standing_row" />

        <!-- Loading State -->
        <ProgressBar
            android:id="@+id/standings_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="32dp"
            android:visibility="gone" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/standings_empty_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="32dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_competition"
                android:tint="@android:color/darker_gray"
                android:alpha="0.5"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No standings data available"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/mulish_regular"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please try again later"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/mulish_regular"
                android:gravity="center"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </FrameLayout>

    <!-- Team Position Info (For TeamSearchFragment) -->
    <LinearLayout
        android:id="@+id/team_position_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/card_background"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_info"
            android:tint="@color/accent_color"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/team_position"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Arsenal is in position 1"
            android:textSize="12sp"
            android:textColor="@color/accent_color"
            android:fontFamily="@font/mulish_bold"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

    <!-- Legend -->
    <LinearLayout
        android:id="@+id/standings_legend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/card_background"
        android:gravity="center"
        android:visibility="visible">

        <!-- UCL -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/position_champions_bg"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UCL"
                android:textSize="10sp"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/mulish_regular" />

        </LinearLayout>

        <!-- UEL -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/position_europa_bg"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UEL"
                android:textSize="10sp"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/mulish_regular" />

        </LinearLayout>

        <!-- REL -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/position_relegation_bg"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REL"
                android:textSize="10sp"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/mulish_regular" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/background_color" />

</LinearLayout>