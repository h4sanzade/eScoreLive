<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Flag/Competition Icon -->
        <androidx.cardview.widget.CardView
            android:id="@+id/flag_card"
            android:layout_width="56dp"
            android:layout_height="40dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/flag_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_placeholder" />

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/competition_info_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/flag_card"
            app:layout_constraintEnd_toStartOf="@id/favorite_button"
            app:layout_constraintStart_toEndOf="@id/flag_card"
            app:layout_constraintTop_toTopOf="@id/flag_card">

            <TextView
                android:id="@+id/competition_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulish_bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Premier League"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/region_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/mulish_regular"
                android:text="England"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/competition_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/competition_type_bg"
                android:fontFamily="@font/mulish_bold"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:paddingEnd="8dp"
                android:paddingBottom="2dp"
                android:text="LEAGUE"
                android:textColor="@color/accent_color"
                android:textSize="10sp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>
        <ImageView
            android:id="@+id/favorite_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:src="@drawable/ic_favorite_outline"
            android:tint="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/flag_card"
            tools:src="@drawable/ic_favorite_filled"
            tools:tint="@color/accent_color" />

        <LinearLayout
            android:id="@+id/stats_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="start"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/flag_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible">

            <TextView
                android:id="@+id/teams_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/stat_badge_bg"
                android:fontFamily="@font/mulish_regular"
                android:padding="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="20 Teams"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/season_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/stat_badge_bg"
                android:fontFamily="@font/mulish_regular"
                android:padding="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="2024/25"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>